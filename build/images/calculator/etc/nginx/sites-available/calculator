server {
        listen 80;
        listen [::]:80;

        root /home/renion/Stylers/Leaderboard/backend/public/;
        index index.php;

        server_name api.leaderboard.local;

        location / {
                try_files $uri $uri/ /index.php?$query_string;
        }

        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/run/php/php7.2-fpm.sock;
        }

        location ~ /\.ht {
                deny all;
        }
}

